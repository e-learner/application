@using System.Collections.Generic
@model IList<ElearnerApp.Models.Subscription>
@{
    ViewBag.Title = "Subscriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Subscriptions</h2>
<hr />
@{
    if (Model.Count == 0)
    {
        <p>You have no subscriptions.</p>
        <p>Go to Courses section and buy some...And learn more!</p>
        <a href="@Url.Action("Index","Courses")" class="btn btn-success btn-lg" role="button">Go to Courses!</a>

    }
    foreach (var subscription in Model)
    {
        <p>&diams; <a href="@Url.Action("Content","Courses", new {id = subscription.CourseId })" class="btn btn-default btn-lg active" role="button">@subscription.Course.Name</a></p>
    }
}
