@using ElearnerApp.Models
@using ElearnerApp.Utilities
<header class="container-fluid">
    <div class="row logodiv">
        <div class="col-lg-4 col-sm-4 col-xs-2 col-xs-6">
            <a href=@Url.Action("Index", "Home")><img src=@Url.Content("~/Content/images/logo.png") alt="logo" height="100"></a>
            <span> E-learning <br>Codenerds Corp.</span>

        </div>
        <div class="col-lg-6 col-sm-6 hidden-xs">
            <p>Possibly the best </p>
        </div>
        <div class="col-lg-2 col-sm-2 col-xs-6 subscribe">
            @{
                Account logInUser = (Account)Session[UserType.LoggedInUser.ToString()];
                if (logInUser == null)
                {
                    <a href="@Url.Action("LogIn", "Authedication")" class="btn btn-info" role="button">Log in </a>
                    <a href=@Url.Action("SignUpForm", "Authedication") class="btn btn-primary" role="button">Sign Up</a>
                }
                else
                {
                    <p>@logInUser.Student.Name @logInUser.Student.Lastname @logInUser.BankAccount.Deposit&euro;</p>
                    <a href=@Url.Action("LogOut", "Authedication") class="btn btn-primary" role="button">Log Out</a>

                }
            }
        </div>
    </div> <!-- Logo Area -->
    <div class="row">
        <nav class="navbar navbar-default">
            <div class="container-fluid menu">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav" role="navigation">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                        <li>@Html.ActionLink("Teachers", "Index", "Teachers")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </div>
            </div> <!-- container -->
        </nav>
    </div>
</header>