@model ElearnerApp.ViewModels.QuizViewModel
@{
    ViewBag.Title = "QuizResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quiz Results</h2>

<ul>
    @{
        for (int i = 0; i < Model.Answers.Count; i++)
        {
            if (Model.Answers[i])
            {
                <li>@(String.Format("Question {0} : Right!!", i+1))</li>
            }
            else
            {
                <li>@(String.Format("Question {0} : Wrong!!", i+1))</li>
            }

        }
    }
</ul>
