@model ElearnerApp.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(TempData["InvalidSearchMessage"] != null)
{
    <div>@TempData["InvalidSearchMessage"]</div>
}
@using (Html.BeginForm("SearchResult","Courses",FormMethod.Post))
{
    <div class=" form-group">
        @Html.LabelFor(x => x.Query)
        @Html.TextBoxFor(x => x.Query, new { @class = "form-control" })
    </div>

    <div class="row">
        <div class=" form-group col-xs-6 col-lg-2">
            @Html.LabelFor(x => x.LowerBoundPrice)
            @Html.TextBoxFor(x => x.LowerBoundPrice, new { @class = "form-control" })
        </div>
        <div class=" form-group col-xs-6 col-lg-2">
            @Html.LabelFor(x => x.UpperBoundPrice)
            @Html.TextBoxFor(x => x.UpperBoundPrice, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class=" form-group col-xs-6 col-lg-2">
            @Html.LabelFor(x => x.LowerBoundDuration)
            @Html.TextBoxFor(x => x.LowerBoundDuration, new { @class = "form-control" })
        </div>
        <div class=" form-group col-xs-6 col-lg-2">
            @Html.LabelFor(x => x.UpperBoundDuration)
            @Html.TextBoxFor(x => x.UpperBoundDuration, new { @class = "form-control" })
        </div>
    </div>
    <button type="submit">Search</button>
}
