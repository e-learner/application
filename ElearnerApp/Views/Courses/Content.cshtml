@model ElearnerApp.ViewModels.ContentViewModel
@{
    ViewBag.Title = "Content";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container contentPage">
    <div class="col-sm-10 col-sm-push-1">
        <h2 class="text-center">@Model.Course.Name</h2>

        <section>
            <div class="row">
                @Model.Content.TextContent

            </div>
        </section>

        <section>
            <div>
                <div class="embed-responsive embed-responsive-16by9 embed">
                    <iframe class="embed-responsive-item" src=@Model.Content.VideoUrl frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </section>
        <div class="text-center">
            <input id="quiz" type="button" class="btn btn-info" value="Take Quiz"
                   onclick="location.href='@Url.Action("Quiz", "Courses", new { Id = Model.Course.Id})'" />
        </div>

        <section class="row">
            <div class="col-sm-10 col-sm-push-1">
                @using (Html.BeginForm("Content", "Courses", FormMethod.Post))
                 {
                    <div class="form-group textarea">
                        <p>Comment</p>
                        @Html.TextAreaFor(s => s.Subscription.Comment)
                    </div>

                    <div class="form-group">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-primary active">
                                @Html.RadioButtonFor(m => m.Subscription.Rate, 1)<span class="glyphicon glyphicon-star unchecked"></span>
                            </label>
                            <label class="btn btn-primary active">
                                @Html.RadioButtonFor(m => m.Subscription.Rate, 2)<span class="glyphicon glyphicon-star unchecked"></span>
                            </label>
                            <label class="btn btn-primary active">
                                @Html.RadioButtonFor(m => m.Subscription.Rate, 3) <span class="glyphicon glyphicon-star unchecked"></span>
                            </label>
                            <label class="btn btn-primary active">
                                @Html.RadioButtonFor(m => m.Subscription.Rate, 4) <span class="glyphicon glyphicon-star unchecked"></span>
                            </label>
                            <label class="btn btn-primary active">
                                @Html.RadioButtonFor(m => m.Subscription.Rate, 5)<span class="glyphicon glyphicon-star unchecked"></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Comment and Rate">
                    </div>

                }
            </div>
         </section>
    </div>
</div>





