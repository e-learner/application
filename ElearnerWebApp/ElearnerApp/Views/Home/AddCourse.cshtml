@model ElearnerApp.ViewModels.AddCourseViewModel
@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Course</h2>

@using (Html.BeginForm("AddCourseToDb", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3><span class="label label-info">Course Info</span></h3>
                <div class="form-group">
                    @Html.Label("Name")
                    @Html.TextBoxFor(m => m.TeachingCourse.Name, new { @class = "form-control", @placeholder = "ex. Maths" })
                    @Html.ValidationMessageFor(m => m.TeachingCourse.Name)
                </div>
                <div class="form-group">
                    @Html.Label("Duration")
                    @Html.TextBoxFor(m => m.TeachingCourse.Duration, new { @class = "form-control", @placeholder = "ex. number of hours (10)" })
                    @Html.ValidationMessageFor(m => m.TeachingCourse.Duration)
                </div>
                <div class="form-group">
                    @Html.Label("Price")
                    @Html.TextBoxFor(m => m.TeachingCourse.Price, new { @class = "form-control", @placeholder = "ex. 10 &euro;" })
                    @Html.ValidationMessageFor(m => m.TeachingCourse.Price)
                </div>
                <div class="form-group">
                    @Html.Label("Description")
                    @Html.TextBoxFor(m => m.TeachingCourse.Description, new { @class = "form-control", @placeholder = "ex. Here you will learn bla bla" })
                    @Html.ValidationMessageFor(m => m.TeachingCourse.Description)
                </div>
                <h3><span class="label label-info">Course Contents</span></h3>
                <div class="form-group">
                    @Html.Label("Documentation")
                    @Html.TextAreaFor(m => m.TeachingCourse.Content.TextContent, new { @class = "form-control", @placeholder = "ex. Write a documantion..." })
                    @Html.ValidationMessageFor(m => m.TeachingCourse.Content.TextContent)
                </div>
                <div class="form-group">
                    @Html.Label("Video Link")
                    @Html.TextBoxFor(m => m.TeachingCourse.Content.VideoUrl, new { @class = "form-control", @placeholder = "ex. Enter video URL" })
                    @Html.ValidationMessageFor(m => m.TeachingCourse.Content.VideoUrl)
                </div>
                <div class="form-group">
                    @Html.Label("Image Thumbnail")
                    <input type="file" name="Image" value="" />
                </div>
            </div>
            <div class="col-lg-6">
                <h3><span class="label label-info">Course Quiz</span></h3>
                @* //TODO: Better Way!! *@
                @{
                    <div class="form-group">
                        @Html.Label("Question ")
                        @Html.TextBoxFor(m => m.FirstQuestion.QuestionStr, new { @class = "form-control", @placeholder = "ex. write a question " })
                        @Html.ValidationMessageFor(m => m.FirstQuestion.QuestionStr)
                    </div>
                    <div class="form-group">
                        @Html.Label("Answer ")
                        @Html.CheckBoxFor(m => m.FirstQuestion.Answer, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Question ")
                        @Html.TextBoxFor(m => m.SecondQuestion.QuestionStr, new { @class = "form-control", @placeholder = "ex. write a question " })
                        @Html.ValidationMessageFor(m => m.SecondQuestion.QuestionStr)
                    </div>
                    <div class="form-group">
                        @Html.Label("Answer ")
                        @Html.CheckBoxFor(m => m.SecondQuestion.Answer, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Question ")
                        @Html.TextBoxFor(m => m.ThirdQuestion.QuestionStr, new { @class = "form-control", @placeholder = "ex. write a question " })
                        @Html.ValidationMessageFor(m => m.ThirdQuestion.QuestionStr)
                    </div>
                    <div class="form-group">
                        @Html.Label("Answer ")
                        @Html.CheckBoxFor(m => m.ThirdQuestion.Answer, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Question ")
                        @Html.TextBoxFor(m => m.ForthQuestion.QuestionStr, new { @class = "form-control", @placeholder = "ex. write a question " })
                        @Html.ValidationMessageFor(m => m.ForthQuestion.QuestionStr)
                    </div>
                    <div class="form-group">
                        @Html.Label("Answer ")
                        @Html.CheckBoxFor(m => m.ForthQuestion.Answer, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Question ")
                        @Html.TextBoxFor(m => m.FifthQuestion.QuestionStr, new { @class = "form-control", @placeholder = "ex. write a question " })
                        @Html.ValidationMessageFor(m => m.FifthQuestion.QuestionStr)
                    </div>
                    <div class="form-group">
                        @Html.Label("Answer ")
                        @Html.CheckBoxFor(m => m.FifthQuestion.Answer, new { @class = "form-control" })
                    </div>
                }
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Course</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}